{% block body %}
    <div class="card-header">
        <h1 class="text-center">Locations</h1>
    </div>
    <div class="card-body">
        <table class="table card-table">
            <thead>
                <tr>
                    <th>Nom Locataire</th>
                    <th class="text-center">Début Location</th>
                    <th class="text-center">Fin Location</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for location in locations %}
                <tr>
                    <td>{{ location.locataire.nomLocataire }}</td>
                    <td class="text-center">{{ location.debutLocation ? location.debutLocation|date('d-m-Y') : '-' }}</td>
                    <td class="text-center">{{ location.finLocation ? location.finLocation|date('d-m-Y') : '-' }}</td>
                    <td class="text-center">
                        <a data-toggle="tooltip" data-placement="top" title="modifier la location" type="button" class="btn btn-success" href="{{ path('app_location_edit', {residenceId: residence.id, lotId: lot.id, id: location.id})}}"><i class="fa-solid fa-pen-to-square"></i></a>
                        <span data-toggle="tooltip" data-placement="top" title="supprimer la location" type="button" class="btn btn-danger deleteResidenceLotChild" 
                            data-id="{{ location.id }}" data-residence-id="{{ residence.id }}" data-lot-id="{{ lot.id }}" data-url="{{ domain_name }}" data-keyword="location">
                            <i class="fa-solid fa-trash"></i>
                        </span> 
                        {# {{ include('location/_delete_form.html.twig', {residenceId: residence.id, lotId: lot.id}) }} #}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">aucune donnée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-center">
            <button class="btn btn-primary"><a href="{{ path('app_location_new', {residenceId: residence.id, lotId: lot.id}) }}">Ajouter une location</a></button>
        </div>
    </div>
{% endblock %}
