{% extends 'base.html.twig' %}

{% block title %}Banque{% endblock %}

{% block body %}
    <h1 class="text-center">Liste des Banques</h1>
    {% for message in app.flashes('success') %}
        <div class="rounded-0 alert alert-info flash-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="rounded-0 alert alert-danger flash-error">
            {{ message }}
        </div>
    {% endfor %}
    <table class="table">
        <thead>
            <tr>
                <th>Nom Banque</th>
                <th>Adresse Banque</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for banque in banques %}
            <tr>
                <td>{{ banque.nomBanque }}</td>
                <td>{{ banque.adresseBanque }}</td>
                <td>
                    <a data-toggle="tooltip" data-placement="top" title="modifier la banque" type="button" class="btn btn-success" href="{{ path('app_banque_edit', {'id': banque.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                    <span data-toggle="tooltip" data-placement="top" title="supprimer la banque" type="button" class="btn btn-danger delete" data-id="{{ banque.id }}"><i class="fa-solid fa-trash"></i></span>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune donn√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="text-center">
        <button class="btn btn-primary">
            <a href="{{ path('app_banque_new') }}">Ajouter une banque</a>
        </button>
    </div>
{% endblock %}
