{% trans_default_domain 'app' %}
{% set message = 'Are you sure you want to delete this item?' %}

<form method="post" action="{{ path('app_emprunt_delete', {'residenceId': residence.id, 'lotId': lot.id, 'id': emprunt.id}) }}" onsubmit="return confirm('{{message}}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ emprunt.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
