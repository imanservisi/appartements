{% block body %}
    <div class="card-header">
        <h1 class="text-center">Emprunt</h1>
    </div>
    <div class="card-body">
        <table class="table card-table">
            <thead>
                <tr>
                    <th>Banque</th>
                    <th>Début Emprunt</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for emprunt in emprunts %}
                    <tr>
                        <td>{{ emprunt.banque.nomBanque }}</td>
                        <td>{{ emprunt.debutEmprunt ? emprunt.debutEmprunt|date('d-m-Y') : '' }}</td>
                        <td>
                            <a data-toggle="tooltip" data-placement="top" title="modifier l'emprunt" type="button" class="btn btn-success" href="{{ path('app_emprunt_edit', {residenceId: residence.id, lotId: lot.id, id: emprunt.id})}}"><i class="fa-solid fa-pen-to-square"></i></a>

                            {# <button class="btn btn-success"><a href={{ path('app_emprunt_edit', {residenceId: residence.id, lotId: lot.id, id: emprunt.id})}}><i class="fa-solid fa-pen-to-square"></i></a></button> #}
                            {# {{ include('emprunt/_delete_form.html.twig', {residenceId: residence.id, lotId: lot.id}) }} #}
                            <span data-toggle="tooltip" data-placement="top" title="supprimer l'emprunt" type="button" class="btn btn-danger deleteResidenceLotChild" 
                                data-id="{{ emprunt.id }}" data-residence-id="{{ residence.id }}" data-lot-id="{{ lot.id }}" data-url="{{ domain_name }}" data-keyword="emprunt">
                                <i class="fa-solid fa-trash"></i>
                            </span>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Aucune donnée</td>
                    </tr>
                {% endfor %}
            
            </tbody>
        </table>
        <div class="text-center">
            <button class="btn btn-primary"><a href="{{ path('app_emprunt_new', {residenceId: residence.id, lotId: lot.id}) }}">Ajouter emprunt</a></button>
        </div>
    </div>
{% endblock %}
