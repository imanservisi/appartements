{% block body %}
<div class="m-3 col-6 card">
    <div class="card-header">
        <h1 class="text-center">Intérêts</h1>
    </div>
    <div class="card-body">
        <table class="table card-table">
            <thead>
                <tr>
                    <th>Année</th>
                    <th>Montant</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for interet in interets %}
                <tr>
                    <td>{{ interet.annee }}</td>
                    <td>{{ interet.montantInteret }}</td>
                    <td>
                        <button class="btn btn-info"><a href="{{ path('app_interet_edit', {residenceId: residence.id, lotId: lot.id, empruntId: emprunt.id, id: interet.id })}}">Modifier</a></button>
                        {{ include('interet/_delete_form.html.twig', {residenceId: residence.id, lotId: lot.id, empruntId: emprunt.id, id: interet.id }) }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">aucune donnée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-center">
            <button class="btn btn-primary"><a href="{{ path('app_interet_new', {residenceId: residence.id, lotId: lot.id, empruntId: emprunt.id }) }}">Ajouter un intérêt</a></button>
        </div>
    </div>
</div>
{% endblock %}
