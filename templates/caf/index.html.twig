{% block body %}
<div class="m-3 col-6 card">
    <div class="card-header">
        <h1 class="text-center">Caf</h1>
    </div>
    <div class="card-body">
        <table class="table card-table">
            <thead>
                <tr>
                    <th>Année</th>
                    <th>Mois</th>
                    <th>Montant</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for caf in cafs %}
                <tr>
                    <td>{{ caf.annee }}</td>
                    <td>{{ caf.mois }}</td>
                    <td>{{ caf.montantCaf }}</td>
                    <td>
                        <button class="btn btn-info"><a href="{{ path('app_caf_edit', {residenceId: residence.id, lotId: lot.id, locationId: location.id, id: caf.id })}}">Modifier</a></button>
                        {{ include('caf/_delete_form.html.twig', {residenceId: residence.id, lotId: lot.id, locationId: location.id}) }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">aucune donnée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-center">
            <button class="btn btn-primary"><a href="{{ path('app_caf_new', {residenceId: residence.id, lotId: lot.id, locationId: location.id}) }}">Ajouter CAF</a></button>
        </div>
    </div>
</div>
{% endblock %}
